--main
function _init()
	t=0
	p_ani={240,241,242,243}
	_upd=update_game
	_drw=draw_game
	dirx={-1,1,0,0}
	diry={0,0,-1,1}
	startgame()
end

function _update60()
	t+=1
	_upd()
end

function _draw()
	_drw()
end

function startgame()
	button_buffer=-1
	p_x=4
	p_y=5
	p_ox=0
	p_oy=0
	p_sox=0
	p_soy=0
	p_t=0
	p_flip=false
	p_mov=nil
end
